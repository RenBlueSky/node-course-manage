<div calss="card card-body">
    <h3>想学的课程</h3>
    <form action="/ideas/{{idea.id}}?_method=PUT" method="post">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
            <label for="title">标题</label>
            <input type="text" class="form-control" name="title" value="{{idea.title}}">
        </div>
        <div class="form-group">
            <label for="details">详情</label>
            <input type="text" class="form-control" name="details" value="{{idea.details}}">
        </div>
        <button type="submit" class="btn btn-primary">确定编辑</button>
    </form>
</div>